
<div class="row">
  <div id="registration-holder" class="offset3 span6">

    <h2>Sign up</h2>

    <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => {:class => "form-horizontal" }) do |f| %>
      <fieldset>
        <%= devise_error_messages! %>

        <div class="control-group">
          <%= f.label "Name", :class => "control-label"%>
          <div class="controls">
            <%= f.text_field :first_name, :class => "input-small", :placeholder => "First" %> &nbsp; &nbsp;
            <%= f.text_field :last_name, :class => "input-small" , :placeholder => "Last"%>
          </div>
        </div>

        <div class="control-group">
          <%= f.label :email, :class => "control-label"%>
          <div class="controls">
            <%= f.email_field :email %>
          </div>
        </div>

        <div class="control-group">
          <%= f.label :password, :class => "control-label"%>
          <div class="controls"><%= f.password_field :password %></div>
        </div>

        <div class="control-group">
          <%= f.label :password_confirmation, :class => "control-label"%>
          <div class="controls">
            <%= f.password_field :password_confirmation %>
          </div>
        </div>

      </fieldset>

      <div class="form-actions"><%= f.submit "Sign up", :class => "btn" %></div>
    <% end %>

    <%= render :partial => "devise/shared/links" %>

  </div>

</div>

