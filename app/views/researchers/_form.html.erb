<%= form_for [organization, @researcher], :html => {:class => "form-horizontal" } do |f| %>
  <fieldset>
    <div class="control-group">
      <%= f.label :title, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :title %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :description, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_area :description, :class => "input-xlarge", :rows => 7 %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :hours_requested, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :hours_requested %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :numbers_requested, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :numbers_requested %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :restrictions, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_area :restrictions, :class => "input-xlarge", :rows => 7 %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :internal_notes, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_area :internal_notes, :class => "input-xlarge", :rows => 7 %>
      </div>
    </div>
  </fieldset>

  <div class="form-actions">
    <%= f.submit :class => "btn btn-primary" %>
    or <%= link_to "Cancel", organization_researcher_path(organization) %>
  </div>
<% end %>
