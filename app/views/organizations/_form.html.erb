<%= simple_form_for(@organization, :html => {:class => 'form-horizontal' }) do |f| %>

  <%= f.input :name, :input_html => { :class => 'input-xlarge' } %>
  <%= f.input :address, :input_html => { :class => 'input-xlarge' }  %>
  <%= f.input :city, :input_html => { :class => 'input-xlarge' }  %>
  <%= f.input :state, :input_html => { :class => 'input-xlarge' }  %>
  <%= f.input :zip, :input_html => { :class => 'input-xlarge' }  %>
  <%= f.input :phone, :input_html => { :class => 'input-xlarge' }  %>

  <% #FIXME: PREPEND TWITTER @ %>
  <%= f.input :twitter, :input_html => { :class => 'input-xlarge' }  %>
  <%= f.input :description, :input_html => {:rows => 10, :class => 'input-xlarge'} %>

  <%= f.button :submit %>
  <span>or</span>
  <%= link_to 'Cancel', "javascript: history.back()" %>
<% end %>
