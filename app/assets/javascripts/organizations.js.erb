
$(document).ready(function(){
  var orgs_path = '<%= Rails.application.routes.url_helpers.organizations_path(:format => :json) %>';
  function getOrganizations() {
    $.get(orgs_path, {}, showOrganizations);
  }

  function showOrganizations(orgs){
    Bridge.map.addObjects(orgs);
  }

  if($("#main_map").length > 0){
    getOrganizations();
  }
  var orgButtons = $("#org-buttons");
  if(orgButtons.length > 0){
    orgButtons.on('click', '[data-action=join]', function(){
      
    })
  }
})
